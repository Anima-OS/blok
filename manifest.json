{
  "manifest_version": 2,
  "name": "Blok",
  "version": "0.1",

  "description": "Implements tracking protection as a web extension add-on.",
  "icons": {
    "48": "icons/blok.png"
  },

  "applications": {
    "gecko": {
      "id": "lcrouch@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["blok.js"]
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]

}
