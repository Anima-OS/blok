{
  "name": "blok",
  "version": "1.0.0",
  "description": "Web Extension implementation of Firefox tracking protection",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "bundle": "browserify -d js/background.js > js/background.bundle.js",
    "build": "npm test && npm run bundle && web-ext build",
    "firefox": "npm run bundle && web-ext run",
    "test": "tape tests/**/*.js | faucet",
    "watch": "npm-watch"
  },
  "watch": {
    "bundle": {
      "patterns": ["**/*.js"],
      "ignore": "*bundle.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/blok.git"
  },
  "keywords": [
    "mozilla",
    "firefox",
    "tracking protection",
    "web extension"
  ],
  "author": "Luke Crouch",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/blok/issues"
  },
  "homepage": "https://github.com/mozilla/blok#readme",
  "devDependencies": {
    "browserify": "^13.0.1",
    "faucet": "0.0.1",
    "npm-watch": "^0.1.5",
    "tape": "^4.6.0"
  }
}
